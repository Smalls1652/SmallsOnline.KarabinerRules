{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build profile",
            "detail": "Build the Karabiner rules to your profile.",
            "icon": {
                "id": "package",
                "color": "terminal.ansiCyan"
            },
            "type": "process",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "close": true
            },
            "problemMatcher": "$tsc"
        }
    ]
}